    <script>
        // Carbon Footprint Calculator
        function calculateFootprint() {
            const transport = document.getElementById('transport').value;
            const distance = parseFloat(document.getElementById('distance').value) || 0;
            const duration = parseInt(document.getElementById('duration').value) || 1;
            
            // Simple calculation (in a real app, this would be more sophisticated)
            let footprintPerKm = 0;
            
            switch(transport) {
                case 'car': footprintPerKm = 0.21; break;
                case 'bus': footprintPerKm = 0.08; break;
                case 'train': footprintPerKm = 0.05; break;
                case 'bike': footprintPerKm = 0; break;
                case 'walk': footprintPerKm = 0; break;
            }
            
            const totalFootprint = (distance * footprintPerKm * 2) + (duration * 10); // Round trip + daily footprint
            
            document.getElementById('score').textContent = totalFootprint.toFixed(1) + ' kg CO2';
            
            // Provide comparison and suggestions
            const avgFootprint = (distance * 0.15 * 2) + (duration * 15);
            const difference = ((avgFootprint - totalFootprint) / avgFootprint) * 100;
            
            if (difference > 0) {
                document.getElementById('comparison').textContent = Math.abs(difference).toFixed(0) + '% lower';
            } else {
                document.getElementById('comparison').textContent = Math.abs(difference).toFixed(0) + '% higher';
            }
            
            // Suggestions based on footprint
            if (totalFootprint > 50) {
                document.getElementById('suggestion').textContent = 'Consider eco-friendly accommodations and local transport to reduce your footprint.';
            } else {
                document.getElementById('suggestion').textContent = 'Great! You\'re making eco-conscious travel choices.';
            }
            
            document.getElementById('result').style.display = 'block';
        }

        // Chatbot functionality
        document.getElementById('chatbotBtn').addEventListener('click', function() {
            document.getElementById('chatbotWindow').style.display = 'flex';
        });
        
        document.getElementById('closeChatbot').addEventListener('click', function() {
            document.getElementById('chatbotWindow').style.display = 'none';
        });
        
        document.getElementById('sendMessage').addEventListener('click', function() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            
            if (message) {
                // Add user message
                const userMessage = document.createElement('div');
                userMessage.className = 'chat-message';
                userMessage.innerHTML = <p><strong>You:</strong> ${message}</p>;
                document.getElementById('chatbotBody').appendChild(userMessage);
                
                // Clear input
                input.value = '';
                
                // Simulate bot response
                setTimeout(function() {
                    const botMessage = document.createElement('div');
                    botMessage.className = 'chat-message bot-message';
                    
                    let response = "I can help you with information about Jharkhand's tourism. For detailed queries, please contact our support team.";
                    
                    if (message.toLowerCase().includes('waterfall') || message.includes('झरना')) {
                        response = "Jharkhand has beautiful waterfalls like Dassam Falls, Hundru Falls, and Jonha Falls. I recommend visiting during monsoon for the best experience.";
                    } else if (message.toLowerCase().includes('hotel') || message.includes('होटेल')) {
                        response = "We have eco-friendly hotels and homestays across Jharkhand. You can book through our platform for certified green accommodations.";
                    } else if (message.toLowerCase().includes('tribal') || message.includes('आदिवासी')) {
                        response = "Jharkhand has rich tribal culture with communities like Santhal, Munda, Oraon, and Ho. You can experience their dances, art, and festivals.";
                    }
                    
                    botMessage.innerHTML = <p><strong>Assistant:</strong> ${response}</p>;
                    document.getElementById('chatbotBody').appendChild(botMessage);
                    
                    // Scroll to bottom
                    document.getElementById('chatbotBody').scrollTop = document.getElementById('chatbotBody').scrollHeight;
                }, 1000);
            }
        });

        // Allow sending message with Enter key
        document.getElementById('chatInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                document.getElementById('sendMessage').click();
            }
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('nav a').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                window.scrollTo({
                    top: targetElement.offsetTop - 100,
                    behavior: 'smooth'
                });
            });
        });
    </script>
